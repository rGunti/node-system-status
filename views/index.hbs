<ul class="collection services">
    {{#each data.services}}
        <li id="service-{{@key}}" class="collection-item avatar">
            <i class="circle fa"></i>
            <span class="title">{{this.name}}</span>
            <!-- <p>{{this.type}}, <i>{{@key}}</i></p> -->
            <p>
                Last updated:
                <b class="service-last-updated">unknown</b>
                <small>(locally updated at <span class="service-last-updated-client">never</span>)</small>
                <br>
                <span class="service-additional-data"></span>
            </p>

            <a href="#!" class="secondary-content refresh-service" data-service="{{@key}}">
                <i class="material-icons">refresh</i>
            </a>
        </li>
    {{/each}}
</ul>
